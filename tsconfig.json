{
  "compilerOptions": {
    "baseUrl": ".", // Définit la base des chemins relatifs
    "paths": {
      "@/*": ["./*"] // Alias pour tous les fichiers dans le projet
    },
    "allowJs": true, // Autorise les fichiers JavaScript
    "jsx": "react", // Supporte les fichiers JSX
    "noEmit": true, // Empêche TypeScript de générer des fichiers .js
    "target": "es6", // Définit la version cible de JavaScript
    "module": "commonjs", // Définit le module système à utiliser
    "moduleResolution": "node", // Résolution des modules comme Node.js
    "strict": true, // Active les options strictes de TypeScript
    "resolveJsonModule": true, // Permet d'importer des fichiers JSON
    "skipLibCheck": true // Ignore la vérification des types dans les dépendances
  },
  "include": [
    "app/**/*", // Inclut tout dans le dossier "app"
    "./**/*", // Inclut tout dans le projet, y compris à la racine
    ".expo/types/**/*.ts", // Types spécifiques à Expo
    "expo-env.d.ts" // Fichier d'environnement Expo
  ],
  "extends": "expo/tsconfig.base"
}
